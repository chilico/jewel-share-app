<div class="container">
  <div class="green-banner">
    <% @jewel.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 200, crop: :fill %>
    <% end %>
  </div>
  <div class="d-flex flex-row justify-content-between">
    <div>
      <h1><%= @jewel.title %></h1>
      <p><%= @jewel.description %></p>
      <p><%= "Â£#{@jewel.price}" %></p>
    </div>
    <div>
      <%= simple_form_for [@jewel, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit "Book Jewellery", class: "btn btn-light-green" %>
      <% end %>
    </div>
  </div>
  <div class="d-flex flex-row justify-content-between">
    <div>
      <p><%= link_to "< Continue Shopping", jewels_path %></p>
    </div>
    <div>
      <p><%= @jewel.user_id %></p>
    </div>
    <div>

    </div>
  </div>
</div>

<% if current_user.profile_pic.attached? %>
    <%= cl_image_tag current_user.profile_pic.key, gravity: "faces", crop: "fill", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
<% else %>
    <%= image_tag "/assets/user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
<% end %>
