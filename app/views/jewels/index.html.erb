<div class="container">
  <h3>All results</h3>
  <div class="row justify-content-center">
    <% @jewels.each do |jewel| %>
      <div class="jewel_card col-8 col-md-4 col-lg-3 m-3 px-4 rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path jewel.photos.first.key %>');">
        <h3><%= jewel.title %></h3>
        <%= link_to "View Listing", jewel, class: "btn btn-outline-light rounded-pill m-4" %>
      </div>
    <% end %>
  </div>
</div>
